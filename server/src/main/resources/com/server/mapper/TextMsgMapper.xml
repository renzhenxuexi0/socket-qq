<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.server.mapper.TextMsgMapper">
    <resultMap id="msgResultMap" type="com.server.pojo.TextMsg">
        <result column="message_time" property="messageTime"/>
        <result column="sender_id" property="senderId"/>
        <result column="receive_id" property="receiveId"/>
    </resultMap>
    <insert id="addMsg">
        insert into tbl_msg(message_time, content, sender_id, receiver_id)
        values (#{messageTime}, #{content}, #{senderId}, #{receiveId})
    </insert>

    <select id="selectByReceiveId" resultMap="msgResultMap">
        select *
        from tbl_msg
        where receiver_id = #{receiveId}
    </select>

</mapper>
