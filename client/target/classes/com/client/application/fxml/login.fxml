                    <font>
                        <Font size="36.0"/>
                    </font>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop>
                                    <color>
                                        <Color red="0.05040000006556511" green="0.6299999952316284"
                                               blue="0.6134399771690369"/>
                                    </color>
                                </Stop>
                                <Stop offset="1.0">
                                    <color>
                                        <Color red="1.0" green="1.0" blue="1.0"/>
                                    </color>
                                </Stop>
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
            </children>
        </StackPane>
        <HBox prefHeight="156.0" prefWidth="350.0">
            <children>
                <GridPane prefHeight="70.0" prefWidth="350.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="170.0" minWidth="10.0"
