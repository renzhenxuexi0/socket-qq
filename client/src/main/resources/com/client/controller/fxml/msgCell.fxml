<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="mainPane" style="-fx-background-color: #F5F5F5" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.client.controller.MsgCell">
    <children>
          <HBox spacing="20.0" style="-fx-background-color: #a2fff9;">
              <children>
                  <ImageView fx:id="senderImage" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="userName" text="ID" textFill="#141414" />
                  <Label fx:id="sendTime" text="time" textFill="#1b1b1b" />
              </children>
          </HBox>
          <Label fx:id="sendContent" layoutX="-1.0" layoutY="24.0" lineSpacing="2.0" maxWidth="160.0" style="-fx-border-color: white; -fx-border-radius: 45; -fx-background-color: white; -fx-background-radius: 45;" textFill="#111111" textOverrun="CLIP" wrapText="true" />
    </children>
</AnchorPane>
